<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFC800"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/main_header_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="36dp"
        android:layout_marginRight="36dp"
        android:text="Enter Your Favorite Borderlands 3 Character"
        android:textAlignment="center"
        android:textSize="@dimen/header_text_size"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/input_char"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="56dp"
        android:layout_marginTop="26dp"
        android:hint="Character name here..."
        android:textColorHint="@color/colorAccent"
        app:layout_constraintTop_toBottomOf="@id/main_header_title" />

    <Button
        android:id="@+id/continue_with_selected_character"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:onClick="VerifyCharacterClick"
        android:text="CONTINUE"
        android:textColor="@color/colorPrimary"
        android:textSize="24sp"
        app:backgroundTintMode="add"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/input_char" />

    <Button
        android:id="@+id/select_new_character"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="26dp"
        android:onClick="ResetToCharacterSelection"
        android:text="NEW CHARACTER"
        android:textSize="24sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/fl4kBio"
        android:layout_width="348dp"
        android:layout_height="248dp"
        android:text="An emergent AI driven in an ongoing quest for self-discovery, FL4K wanders from world to world accompanied by beasts. While they feel an connection with the primal wisdom of animals, the social construct of humans are strange to them. On their endless hunt, FL4Kâ€™s loyal Skag, Spiderant, and Jabber companions help them track and claim their quarry, be it human, Vault Monster, or anything in between."
        android:textSize="18sp"
        android:visibility="gone"
        tools:layout_editor_absoluteX="27dp"
        tools:layout_editor_absoluteY="467dp" />

    <ImageView
        android:id="@+id/fl4kView"
        android:layout_width="272dp"
        android:layout_height="501dp"
        android:visibility="gone"
        app:srcCompat="@drawable/fl4k"
        tools:layout_editor_absoluteX="69dp"
        tools:layout_editor_absoluteY="-8dp" />

</androidx.constraintlayout.widget.ConstraintLayout>